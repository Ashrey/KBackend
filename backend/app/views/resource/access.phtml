    {% if result %}
        {%exec Form::open '' %}
        {%inline '_shared/form/submit.phtml' %}
        {%for item in result%}
        <div class="col-3">
        {% set i = item.id|InArray:privilegios %}
            <label>{{item.role}}
            {%exec Form::check "access.", item.id, FALSE, i %}
            </label>
        </div>
        {%endfor%}
        </form>
    {%else%}
        <h2>No hay ning√∫n registro</h2>
    {%endif%}
{%endblock%}